<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<HBox id="openAppContainer" class="sapUiTinyContentPadding">
		<items>
			<!-- Botão 1 - sempre visível, texto varia -->
			<HBox id="hboxButton1">
				<!-- Icon for TP1 / Workflow App availability -->
			<core:Icon id="iconTP1" core:require="{formatter: 'emlatracker/emlatracker/ext/formatter/TrackAppFormatter'}"
				src="{parts:[{path:'trackApp'},{path:'isTrackAppCompleted'},{path:'emlaType'},{path:'isTrackAppRejected'}], formatter:'formatter.iconTP1'}"
				color="{parts:[{path:'trackApp'},{path:'isTrackAppCompleted'},{path:'isTrackAppRejected'}], formatter:'formatter.colorTP1'}"
					class="emlaIconPad"
					tooltip="{parts:[{path:'trackApp'},{path:'isTrackAppCompleted'},{path:'isTrackAppRejected'},{path:'trackAppStatus'},{path:'trackAppDate'}], formatter:'formatter.tooltipTP1'}"/>
				<Link id="button1"
					  text="{= ${emlaType} === 'Public Cloud ERP' ? 'TP1' : ${emlaType} === 'Integration Suite' ? 'TP1' : 'Workflow App'}"
					  press="handler.onPressEMLA" 
					  core:require="{ handler: 'emlatracker/emlatracker/ext/fragment/OpenApp'}"
					  class="sapUiTinyMarginEnd sapUiTinyMarginBegin">
					<customData>
						<core:CustomData key="action" value="button1" />
					</customData>
				</Link>
			</HBox>
			
			<!-- Separador 1 - só aparece se button2 tem texto -->
			<Text text="{= ${emlaType} === 'Integration Suite' ? ' | ' : ''}" id="separator1" 
				  class="sapUiTinyMarginEnd"/>
			
			<!-- Botão 2 - texto vazio para Private Cloud ERP -->
			<HBox id="hboxButton2">
			<core:Icon id="iconTP2" core:require="{formatter: 'emlatracker/emlatracker/ext/formatter/TrackAppFormatter'}"
				src="{parts:[{path:'trackAppTP2'},{path:'isTrackAppTP2Completed'},{path:'emlaType'},{path:'isTrackAppTP2Rejected'}], formatter:'formatter.iconTP2'}"
				color="{parts:[{path:'trackAppTP2'},{path:'isTrackAppTP2Completed'},{path:'isTrackAppTP2Rejected'}], formatter:'formatter.colorTP2'}"
					class="emlaIconPad"
					tooltip="{parts:[{path:'trackAppTP2'},{path:'isTrackAppTP2Completed'},{path:'isTrackAppTP2Rejected'},{path:'trackAppTP2Status'},{path:'trackAppTP2Date'}], formatter:'formatter.tooltipTP2'}"/>
				<Link id="button2"
					  text="{= ${emlaType} === 'Integration Suite' ? 'TP2' : ''}"
					  press="handler.onPressEMLA" 
					  core:require="{ handler: 'emlatracker/emlatracker/ext/fragment/OpenApp'}"
					  class="sapUiTinyMarginEnd sapUiTinyMarginBegin">
					<customData>
						<core:CustomData key="action" value="button2" />
					</customData>
				</Link>
			</HBox>
			
			<!-- Separador 2 - só aparece para Integration Suite -->
			<Text text="{= ${emlaType} === 'Integration Suite' ? ' | ' : ''}" id="separator2" 
				  class="sapUiTinyMarginEnd"/>
			
			<!-- Botão 3 - só tem texto para Integration Suite -->
			<HBox id="hboxButton3">
			<core:Icon id="iconSH" core:require="{formatter: 'emlatracker/emlatracker/ext/formatter/TrackAppFormatter'}"
				src="{parts:[{path:'trackAppSH'},{path:'isTrackAppSHCompleted'},{path:'emlaType'},{path:'isTrackAppSHRejected'}], formatter:'formatter.iconSH'}"
				color="{parts:[{path:'trackAppSH'},{path:'isTrackAppSHCompleted'},{path:'isTrackAppSHRejected'}], formatter:'formatter.colorSH'}"
					class="emlaIconPad"
					tooltip="{parts:[{path:'trackAppSH'},{path:'isTrackAppSHCompleted'},{path:'isTrackAppSHRejected'},{path:'trackAppSHStatus'},{path:'trackAppSHDate'}], formatter:'formatter.tooltipSH'}"/>
				<Link id="button3"
					  text="{= ${emlaType} === 'Integration Suite' ? 'SH' : ''}"
					  press="handler.onPressEMLA" 
					  core:require="{ handler: 'emlatracker/emlatracker/ext/fragment/OpenApp'}"
					  class="sapUiTinyMarginBegin">
					<customData>
						<core:CustomData key="action" value="button3" />
					</customData>
				</Link>
			</HBox>
		</items>
	</HBox>
</core:FragmentDefinition>