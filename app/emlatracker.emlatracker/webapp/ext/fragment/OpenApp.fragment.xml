<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<HBox id="openAppContainer" class="sapUiTinyContentPadding">
		<items>
			<!-- Botão 1 - sempre visível, texto varia -->
			<HBox id="hboxButton1">
				<!-- Icon for TP1 / Workflow App availability -->
				<core:Icon id="iconTP1" core:require="{formatter: 'emlatracker/emlatracker/ext/formatter/TrackAppFormatter'}"
					src="{parts:[{path:'trackApp'},{path:'isTrackAppCompleted'}], formatter:'formatter.iconTP1'}"
					class="emlaIconPad {parts:[{path:'isTrackAppCompleted'}], formatter:'formatter.greenClass'} {= ${isTrackAppCompleted} ? 'emlaIconDebugTrue' : '' }"
					tooltip="{parts:[{path:'trackApp'},{path:'isTrackAppCompleted'}], formatter:'formatter.tooltipTP1'}"/>
				<Link id="button1"
					  text="{= ${emlaType} === 'Public Cloud ERP' ? 'TP1' : ${emlaType} === 'Integration Suite' ? 'TP1' : 'Workflow App'}"
					  press="handler.onPressEMLA" 
					  core:require="{ handler: 'emlatracker/emlatracker/ext/fragment/OpenApp'}"
					  class="sapUiTinyMarginEnd sapUiTinyMarginBegin">
					<customData>
						<core:CustomData key="action" value="button1" />
					</customData>
				</Link>
			</HBox>
			
			<!-- Separador 1 - só aparece se button2 tem texto -->
			<Text text="{= ${emlaType} === 'Integration Suite' ? ' | ' : ''}" id="separator1" 
				  class="sapUiTinyMarginEnd"/>
			
			<!-- Botão 2 - texto vazio para Private Cloud ERP -->
			<HBox id="hboxButton2">
				<core:Icon id="iconTP2" core:require="{formatter: 'emlatracker/emlatracker/ext/formatter/TrackAppFormatter'}"
					src="{parts:[{path:'trackAppTP2'},{path:'isTrackAppTP2Completed'}], formatter:'formatter.iconTP2'}"
					class="emlaIconPad {parts:[{path:'isTrackAppTP2Completed'}], formatter:'formatter.greenClass'} {= ${isTrackAppTP2Completed} ? 'emlaIconDebugTrue' : '' }"
					tooltip="{parts:[{path:'trackAppTP2'},{path:'isTrackAppTP2Completed'}], formatter:'formatter.tooltipTP2'}"/>
				<Link id="button2"
					  text="{= ${emlaType} === 'Integration Suite' ? 'TP2' : ''}"
					  press="handler.onPressEMLA" 
					  core:require="{ handler: 'emlatracker/emlatracker/ext/fragment/OpenApp'}"
					  class="sapUiTinyMarginEnd sapUiTinyMarginBegin">
					<customData>
						<core:CustomData key="action" value="button2" />
					</customData>
				</Link>
			</HBox>
			
			<!-- Separador 2 - só aparece para Integration Suite -->
			<Text text="{= ${emlaType} === 'Integration Suite' ? ' | ' : ''}" id="separator2" 
				  class="sapUiTinyMarginEnd"/>
			
			<!-- Botão 3 - só tem texto para Integration Suite -->
			<HBox id="hboxButton3">
				<core:Icon id="iconSH" core:require="{formatter: 'emlatracker/emlatracker/ext/formatter/TrackAppFormatter'}"
					src="{parts:[{path:'trackAppSH'},{path:'isTrackAppSHCompleted'}], formatter:'formatter.iconSH'}"
					class="emlaIconPad {parts:[{path:'isTrackAppSHCompleted'}], formatter:'formatter.greenClass'} {= ${isTrackAppSHCompleted} ? 'emlaIconDebugTrue' : '' }"
					tooltip="{parts:[{path:'trackAppSH'},{path:'isTrackAppSHCompleted'}], formatter:'formatter.tooltipSH'}"/>
				<Link id="button3"
					  text="{= ${emlaType} === 'Integration Suite' ? 'SH' : ''}"
					  press="handler.onPressEMLA" 
					  core:require="{ handler: 'emlatracker/emlatracker/ext/fragment/OpenApp'}"
					  class="sapUiTinyMarginBegin">
					<customData>
						<core:CustomData key="action" value="button3" />
					</customData>
				</Link>
			</HBox>
		</items>
	</HBox>
</core:FragmentDefinition>