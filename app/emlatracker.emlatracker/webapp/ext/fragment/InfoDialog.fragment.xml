<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
	<Dialog
		id="infoDialog"
		title="Additional Information"
		contentWidth="500px"
		contentHeight="400px">
		<content>
			<f:SimpleForm id="infoForm" editable="false" layout="ResponsiveGridLayout">
				<f:content>
					<Label id="lblCustomerNumber" text="Customer Number" />
					<Text id="txtCustomerNumber" text="{customerNumber}" />
					
					<Label id="lblCustomerName" text="Customer Name" />
					<Text id="txtCustomerName" text="{customerName}" />
					
					<Label id="lblEmlaType" text="EMLA Type" />
					<Text id="txtEmlaType" text="{emlaType}" />
					
					<Label id="lblStatus" text="Status" />
					<Text id="txtStatus" text="{status}" />
					
					<Label id="lblAdvisor" text="BTP Onboarding Advisor" />
					<Text id="txtAdvisor" text="{btpOnbAdvNome}" />
					
					<Label id="lblTrackAppStatus" text="Track App Status" />
					<Text id="txtTrackAppStatus" text="{trackAppStatus}" />
					
					<Label id="lblTrackAppDate" text="Track App Date" />
					<Text id="txtTrackAppDate" text="{path: 'trackAppDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}" />
					
					<Label id="lblTrackAppTP2Status" text="Track App TP2 Status" />
					<Text id="txtTrackAppTP2Status" text="{trackAppTP2Status}" />
					
					<Label id="lblTrackAppTP2Date" text="Track App TP2 Date" />
					<Text id="txtTrackAppTP2Date" text="{path: 'trackAppTP2Date', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}" />
					
					<Label id="lblTrackAppSHStatus" text="Track App SH Status" />
					<Text id="txtTrackAppSHStatus" text="{trackAppSHStatus}" />
					
					<Label id="lblTrackAppSHDate" text="Track App SH Date" />
					<Text id="txtTrackAppSHDate" text="{path: 'trackAppSHDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}" />
					
					<Label id="lblCompletedOn" text="Completed On" />
					<Text id="txtCompletedOn" text="{path: 'completedOn', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}" />
					
					<Label id="lblNotes" text="Notes" />
					<Text id="txtNotes" text="{notes}" />
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button id="btnClose" text="Close" press="handler.onCloseInfoDialog" 
				core:require="{ handler: 'emlatracker/emlatracker/ext/controller/InfoDialogController'}" />
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
